<% layout("/layouts/boilerplate") %>
<style>
    
body {
      background-color: #f5f7fa;
      font-family: 'Poppins', sans-serif;
    }
.job-detail {
  max-width: 700px;
  margin: 60px auto;
  background: #fff;
  padding: 40px;
  border-radius: 12px;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
}
.job-detail h2 {
  color: #2e86de;
  margin-bottom: 10px;
}
.job-detail h5 {
  color: #444;
  margin-bottom: 20px;
}
.job-detail p {
  color: #555;
  line-height: 1.6;
}
.btn-back {
  background-color: #2e86de;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  text-decoration: none;
}
.btn-back:hover {
  background-color: #1b65b8;
}
.btns {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    gap: 10px;
    margin-top: -2rem;
}
